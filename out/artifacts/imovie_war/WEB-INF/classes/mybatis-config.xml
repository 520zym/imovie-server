<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <settings>
        <setting name="logImpl" value="LOG4J2"/>
    </settings>

    <typeAliases>
        <typeAlias type="com.imovie.bean.UsrBean" alias="usrBean"/>
        <typeAlias type="com.imovie.bean.ActivityBean" alias="activityBean"/>
        <typeAlias type="com.imovie.bean.MovieBean" alias="movieBean"/>
    </typeAliases>

    <mappers>
        <mapper resource="com/imovie/mapper/UsrDAO.xml"/>
        <mapper resource="com/imovie/mapper/ActivityDAO.xml"/>
        <mapper resource="com/imovie/mapper/MovieDAO.xml"/>
    </mappers>
</configuration>